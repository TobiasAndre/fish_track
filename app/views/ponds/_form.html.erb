<%= form_with model: @pond, class: "mt-6 space-y-4" do |f| %>
  <%= render "shared/form_errors", resource: @pond %>

  <div>
    <%= f.label :unit_id, "Unidade", class: "block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1" %>
    <%= f.collection_select :unit_id,
      current_user.company.units.order(:name),
      :id, :name,
      { prompt: "Selecione uma unidade" },
      class: "w-full rounded-lg border px-3 py-2 text-sm
              bg-white dark:bg-gray-950
              border-gray-300 dark:border-gray-700
              text-gray-900 dark:text-gray-100
              focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= f.label :name, "Nome do açude", class: "block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1" %>
    <%= f.text_field :name, class: "w-full rounded-lg border px-3 py-2 text-sm
                                    bg-white dark:bg-gray-950
                                    border-gray-300 dark:border-gray-700
                                    text-gray-900 dark:text-gray-100
                                    focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <div>
      <%= f.label :capacity, "Capacidade (opcional)", class: "block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1" %>
      <%= f.number_field :capacity, step: 0.01, class: "w-full rounded-lg border px-3 py-2 text-sm
                                                        bg-white dark:bg-gray-950
                                                        border-gray-300 dark:border-gray-700
                                                        text-gray-900 dark:text-gray-100
                                                        focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :capacity_unit, "Unidade (ex: m³, ha)", class: "block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1" %>
      <%= f.text_field :capacity_unit, placeholder: "m³", class: "w-full rounded-lg border px-3 py-2 text-sm
                                                                  bg-white dark:bg-gray-950
                                                                  border-gray-300 dark:border-gray-700
                                                                  text-gray-900 dark:text-gray-100
                                                                  focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>
  </div>

  <div class="flex gap-2">
    <%= f.submit "Salvar", class: "flex-1 bg-indigo-600 hover:bg-indigo-700
                                  dark:bg-indigo-500 dark:hover:bg-indigo-400
                                  text-white font-medium py-2.5 rounded-lg transition" %>

    <%= link_to "Cancelar", ponds_path,
      class: "px-4 py-2.5 rounded-lg border border-gray-300 dark:border-gray-700
              hover:bg-gray-50 dark:hover:bg-gray-800 transition" %>
  </div>
<% end %>
