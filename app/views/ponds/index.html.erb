<div class="max-w-4xl mx-auto">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-semibold text-gray-900 dark:text-gray-100">Tanques</h1>
      <p class="mt-1 text-sm text-gray-600 dark:text-gray-300">
        Cadastre os Tanques/tanques por unidade.
      </p>
    </div>

    <%= link_to "Novo Tanque", new_pond_path,
      class: "px-4 py-2 rounded-lg bg-indigo-600 hover:bg-indigo-700
              dark:bg-indigo-500 dark:hover:bg-indigo-400
              text-white text-sm font-medium transition" %>
  </div>

  <div class="mt-6 overflow-hidden rounded-xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900">
    <table class="w-full text-sm">
      <thead class="bg-gray-50 dark:bg-gray-950/40 text-gray-600 dark:text-gray-300">
        <tr>
          <th class="text-left px-4 py-3 font-medium">Unidade</th>
          <th class="text-left px-4 py-3 font-medium">Tanque</th>
          <th class="text-left px-4 py-3 font-medium">Capacidade</th>
          <th class="text-right px-4 py-3 font-medium">Ações</th>
        </tr>
      </thead>

      <tbody class="divide-y divide-gray-200 dark:divide-gray-800">
        <% @ponds.each do |pond| %>
          <tr>
            <td class="px-4 py-3 text-gray-700 dark:text-gray-200"><%= pond.unit.name %></td>
            <td class="px-4 py-3 text-gray-900 dark:text-gray-100 font-medium"><%= pond.name %></td>
            <td class="px-4 py-3 text-gray-700 dark:text-gray-200">
              <% if pond.capacity.present? %>
                <%= pond.capacity %> <%= pond.capacity_unit.presence || "" %>
              <% else %>
                <span class="text-gray-400 dark:text-gray-500">—</span>
              <% end %>
            </td>
            <td class="px-4 py-3">
              <div class="flex justify-end gap-2">
                <%= link_to "Editar", edit_pond_path(pond),
                  class: "px-3 py-1.5 rounded-lg border border-gray-300 dark:border-gray-700
                          hover:bg-gray-50 dark:hover:bg-gray-800 transition" %>

                <%= button_to "Excluir", pond_path(pond),
                  method: :delete,
                  data: { turbo_confirm: "Excluir Tanque #{pond.name}?" },
                  class: "px-3 py-1.5 rounded-lg bg-red-600 hover:bg-red-700 text-white transition" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
