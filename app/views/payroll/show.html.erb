<div class="max-w-6xl mx-auto">
  <div class="flex items-start justify-between gap-4">
    <div>
      <h1 class="text-2xl font-semibold text-gray-900 dark:text-gray-100">Folha de pagamento</h1>
      <p class="mt-1 text-sm text-gray-600 dark:text-gray-300">
        Competência <%= "%02d" % @month %>/<%= @year %> — salário base + adiantamentos.
      </p>
    </div>

    <div class="flex items-end gap-2">
      <%= form_with url: payroll_path, method: :get, class: "flex items-end gap-2" do %>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1">Mês</label>
          <%= select_tag :month,
            options_for_select((1..12).map { |m| ["%02d" % m, m] }, @month),
            class: "rounded-lg border px-3 py-2 text-sm bg-white dark:bg-gray-950
                    border-gray-300 dark:border-gray-700 text-gray-900 dark:text-gray-100" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1">Ano</label>
          <%= number_field_tag :year, @year,
            class: "w-28 rounded-lg border px-3 py-2 text-sm bg-white dark:bg-gray-950
                    border-gray-300 dark:border-gray-700 text-gray-900 dark:text-gray-100" %>
        </div>

        <%= submit_tag "Ir",
          class: "px-4 py-2 rounded-lg bg-gray-900 text-white hover:bg-gray-800
                  dark:bg-gray-100 dark:text-gray-900 dark:hover:bg-gray-200 transition" %>
      <% end %>
    </div>
  </div>

  <div class="mt-6 space-y-4">
    <% @employees.each do |emp| %>
      <% items = (@items_by_employee[emp.id] || []) %>
      <% advances = items.select { |i| i.item_type == "advance" } %>
      <% total_adv_cents = advances.sum(&:amount_cents) %>
      <% salary_cents = emp.salary_cents.to_i %>
      <% remaining_cents = [salary_cents - total_adv_cents, 0].max %>

      <div class="rounded-xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 overflow-hidden">
        <div class="px-4 py-3 border-b border-gray-200 dark:border-gray-800 flex items-start justify-between gap-4">
          <div>
            <div class="font-semibold text-gray-900 dark:text-gray-100"><%= emp.name %></div>
            <div class="text-xs text-gray-500 dark:text-gray-400"><%= emp.role.presence || "—" %></div>
          </div>

          <div class="text-right">
            <div class="text-xs text-gray-500 dark:text-gray-400">Saldo a pagar</div>
            <div class="text-lg font-semibold text-gray-900 dark:text-gray-100">
              <%= number_to_currency(remaining_cents / 100.0, unit: "R$ ", separator: ",", delimiter: ".") %>
            </div>
          </div>
        </div>

        <div class="p-4 grid grid-cols-1 lg:grid-cols-3 gap-4">
          <!-- Resumo -->
          <div class="rounded-xl border border-gray-200 dark:border-gray-800 p-4">
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600 dark:text-gray-300">Salário base</span>
              <span class="font-medium text-gray-900 dark:text-gray-100">
                <%= number_to_currency(salary_cents / 100.0, unit: "R$ ", separator: ",", delimiter: ".") %>
              </span>
            </div>

            <div class="mt-2 flex items-center justify-between">
              <span class="text-sm text-gray-600 dark:text-gray-300">Adiantamentos</span>
              <span class="font-medium text-gray-900 dark:text-gray-100">
                <%= number_to_currency(total_adv_cents / 100.0, unit: "R$ ", separator: ",", delimiter: ".") %>
              </span>
            </div>

            <div class="mt-3 pt-3 border-t border-gray-200 dark:border-gray-800 flex items-center justify-between">
              <span class="text-sm font-medium text-gray-700 dark:text-gray-200">Falta pagar</span>
              <span class="font-semibold text-gray-900 dark:text-gray-100">
                <%= number_to_currency(remaining_cents / 100.0, unit: "R$ ", separator: ",", delimiter: ".") %>
              </span>
            </div>
          </div>

          <!-- Lista de adiantamentos -->
          <div class="lg:col-span-2">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-sm font-semibold text-gray-900 dark:text-gray-100">Adiantamentos</h3>
            </div>

            <div class="rounded-xl border border-gray-200 dark:border-gray-800 overflow-hidden">
              <div class="divide-y divide-gray-200 dark:divide-gray-800">
                <% if advances.any? %>
                  <% advances.each do |a| %>
                    <div class="px-4 py-3 flex items-start justify-between gap-3">
                      <div class="min-w-0">
                        <div class="text-sm font-medium text-gray-900 dark:text-gray-100">
                          <%= number_to_currency(a.amount_cents / 100.0, unit: "R$ ", separator: ",", delimiter: ".") %>
                        </div>
                        <div class="text-xs text-gray-500 dark:text-gray-400">
                          <%= a.notes.presence || "Adiantamento" %>
                        </div>
                      </div>

                      <%= button_to "Remover", payroll_item_path(a),
                        method: :delete,
                        data: { turbo_confirm: "Remover este adiantamento?" },
                        class: "px-3 py-1.5 rounded-lg border border-gray-300 dark:border-gray-700
                                hover:bg-gray-50 dark:hover:bg-gray-800 transition text-sm" %>
                    </div>
                  <% end %>
                <% else %>
                  <div class="px-4 py-6 text-sm text-gray-500 dark:text-gray-400">
                    Nenhum adiantamento lançado neste mês.
                  </div>
                <% end %>
              </div>

              <!-- Form: novo adiantamento -->
              <div class="px-4 py-4 border-t border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-950/30">
                <%= form_with model: @new_item, url: payroll_items_path, method: :post, class: "grid grid-cols-1 sm:grid-cols-3 gap-3 items-end" do |f| %>
                  <%= f.hidden_field :employee_id, value: emp.id %>
                  <%= f.hidden_field :year, value: @year %>
                  <%= f.hidden_field :month, value: @month %>
                  <%= f.hidden_field :item_type, value: "advance" %>

                  <div data-controller="money-input">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1">Valor (R$)</label>

                    <input
                      type="text"
                      inputmode="decimal"
                      autocomplete="off"
                      placeholder="Ex: 1.500,00"
                      data-money-input-target="display"
                      data-action="input->money-input#input blur->money-input#blur"
                      class="w-full rounded-lg border px-3 py-2 text-sm
                             bg-white dark:bg-gray-950
                             border-gray-300 dark:border-gray-700
                             text-gray-900 dark:text-gray-100" />

                    <%= f.hidden_field :amount_cents, data: { "money-input-target": "cents" } %>
                  </div>

                  <div class="sm:col-span-2">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1">Observação</label>
                    <%= f.text_field :notes, placeholder: "Ex: adiantamento para compra de insumos…",
                      class: "w-full rounded-lg border px-3 py-2 text-sm
                              bg-white dark:bg-gray-950
                              border-gray-300 dark:border-gray-700
                              text-gray-900 dark:text-gray-100" %>
                  </div>

                  <div class="sm:col-span-3">
                    <%= f.submit "Lançar adiantamento",
                      class: "w-full px-4 py-2 rounded-lg bg-indigo-600 hover:bg-indigo-700
                              dark:bg-indigo-500 dark:hover:bg-indigo-400
                              text-white text-sm font-medium transition" %>
                  </div>
                <% end %>
              </div>
            </div>

          </div>
        </div>
      </div>
    <% end %>

    <% if @employees.empty? %>
      <div class="rounded-xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 p-6 text-sm text-gray-500 dark:text-gray-400">
        Nenhum funcionário cadastrado.
        <%= link_to "Criar funcionário", new_employee_path, class: "text-indigo-600 dark:text-indigo-400 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>
